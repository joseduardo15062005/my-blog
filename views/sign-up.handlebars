<div class="login-container">
  <form class="login-form" id="signupForm">
    <div class="title-hero title-login">
      {TECH BLOG}
    </div>
    <div class="hero-login">
      <lottie-player
        src="https://assets6.lottiefiles.com/packages/lf20_0qejs58a.json"
        background="transparent"
        speed="1"
        style="width: 200px; height: 200px;"
        loop
        autoplay
      ></lottie-player>

    </div>
    <div class="d-flex justify-content-center">
      <h1 class="pb-0">Sign up</h1>
    </div>
    <div class="form-floating div-input mb-3">
      <input
        type="text"
        class="form-control"
        id="firstName"
        placeholder="First Name"
        required
        maxlength="35"
      />
      <label for="floatingInput">First Name</label>
    </div>
    <div class="form-floating div-input mb-3">
      <input
        type="text"
        class="form-control"
        id="lastName"
        placeholder="Last Name"
        required
        maxlength="35"
      />
      <label for="floatingInput">Last Name</label>
    </div>
    <div class="form-floating div-input mb-3">
      <input
        type="email"
        class="form-control"
        id="email"
        placeholder="name@example.com"
        required
      />
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating div-input mb-4">
      <input
        type="password"
        class="form-control"
        id="password"
        placeholder="Password"
        required
      />
      <label for="floatingPassword">Password</label>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
      <button type="submit" class="btn btn-blue btn-lg">Sign up</button>
    </div>
  </form>
</div>
<script src="/js/signup.js"></script>