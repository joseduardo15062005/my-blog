<div class="blogs-list">
  {{#each blogs}}
    <div class="col">
      <div class="card shadow mb-3 bg-body rounded">
        {{!-- <img class="card-img-top" src="{{image}}" alt="Card image cap" /> --}}
        <div class="card-body">
          <h5 class="card-title blog-title"><a
              href="/view-blog/{{id}}"
            >{{title}}</a></h5>
          <p class="card-text blog-body">{{body}}</p>
          <div class="d-flex flex-row justify-content-end mt-2">
            <small class="text-muted">{{format_date createdAt}}</small>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>